<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane styleClass="root" xmlns:fx="http://javafx.com/fxml" prefHeight="800" prefWidth="600">

    <top>
        <VBox spacing="25">
            <TextField
                       alignment="CENTER"
                       fx:id="title"
                       styleClass="title"
                       prefWidth="400"
                       editable="false"
                       text="ServerLog"
            />
            <HBox alignment="center" spacing="25">
                <ListView fx:id="log"
                          styleClass="log"
                          prefWidth="400"
                          prefHeight="650"
                />
            </HBox>
        </VBox>
    </top>

    <BorderPane.margin>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </BorderPane.margin>

</BorderPane>
