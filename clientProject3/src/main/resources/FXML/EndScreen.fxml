<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.text.Text?>
<BorderPane styleClass="root" xmlns:fx="http://javafx.com/fxml" fx:controller="ClientController" prefHeight="400" prefWidth="600">
    <top>
        <VBox alignment="TOP_CENTER" spacing="20">
            <TextField alignment="CENTER"
                       styleClass="title"
                       prefWidth="400"
                       editable="false"
                       text="Your Results..."
            />
            <Text wrappingWidth="600"
                  fx:id="results"
                  styleClass="results"
            />
        </VBox>
    </top>

    <bottom>
        <VBox spacing="25">
            <HBox alignment="CENTER" spacing="25">
                <Button fx:id="exit" styleClass="menu" alignment="CENTER" text="EXIT" onAction="#exitGame"/>
                <Button fx:id="tryagain" styleClass="menu" alignment="CENTER" text="TRY AGAIN" onAction="#newGame"/>
            </HBox>
        </VBox>
    </bottom>

    <BorderPane.margin>
        <Insets top="50" bottom="50" left="50" right="50"/>
    </BorderPane.margin>

</BorderPane>
